

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        <div class="form-group">
            <label class="form-label col-md-4">First Name:</label>
            <input class="form-control col-md-8" type="text" data-bind="value:firstName" />
        </div>
        <div class="form-group">
            <label class="form-label col-md-4">Last Name:</label>
            <input class="form-control col-md-8" type="text" data-bind="value:lastName" />
        </div>
        <div class="form-group">
            <label class="form-label col-md-4">Age:</label>
            <input class="form-control col-md-8" type="number" data-bind="value:age" />
        </div>
        <p data-bind="visible:firstName().length>0"><b data-bind="text:firstName"></b>  <b data-bind="text:lastName"></b> is <b data-bind="text:age"></b> years old.</p>
       
    </div>
    <div class="col-md-2"></div>
</div>


@section scripts {
    <script src="~/js/aboutmodel.js"></script>
}